@using RecrutmentAgency.Extensions
@model IEnumerable<RecrutmentAgency.Data.Candidate>

<table class="table">
    <tr>
        <th>
            @Html.SortLink("Фамилия", "LastName", "Index", "Candidate", null)  
        </th>
        <th>
            @Html.SortLink("Имя", "FirstName", "Index", "Candidate", null)
        </th>
        <th>
            @Html.SortLink("Отчество", "Patronymic", "Index", "Candidate", null)
        </th>
        <th>
            @Html.SortLink("Дата рождения", "DateBirth", "Index", "Candidate", null)
        </th>
        <th>
            @Html.SortLink("Опыт", "Experience", "Index", "Candidate", null)
        </th>
        <th>
            @Html.SortLink("Фото", "FileId", "Index", "Candidate", null)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patronymic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Experience)
            </td>
            <td>
                @if (item.FileId != null)
                {
                    <img src="@Url.Action("Download", "File", new { id = item.FileId.Id })" style="width:24px;" />
                }
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>